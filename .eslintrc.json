{
    "env": {
        "es6": true,
        "node": true
    },
   "extends": [
		"prettier",
		"airbnb-base"
	],
	"plugins": [
		"prettier"
	],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
			"prettier/prettier": "error",
			"arrow-parens": [
				2,
				"as-needed",
				{
					"requireForBlockBody": true
				}
			],
			"radix": [
				"error",
				"as-needed"
			],
			"import/extensions": [
				"error",
				"ignorePackages",
				{
					"js": "always"
				}
			]
    }
}